extends layout

block content
  h1 Edit your reminder:
  form(name="reminder", action="/reminders/update", method="post", class="mainWrap")
        input(type="text", name="reminder", value=theReminder.reminderText, class="mainArea")
        input(type="text", name="number", value=theReminder.to_number, class="number")
        input(type="submit", value="Update Reminder", class="button")
        input(type="text", name="id", value=theReminder.name, hidden="hidden")
